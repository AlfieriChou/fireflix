{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
		"downlevelIteration": true,
		"lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "lib",
    "baseUrl": "lib",
    "paths": {
      "@/*": ["*"]
    },
		"types": ["node"],
    "typeRoots": ["./lib/@types", "./lib/node_modules/@types"]
  },
  "include": ["lib/**/*", "src/**/*", "*.js"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
